---
import StructuredData from '../../components/StructuredData.astro';
import Layout from '../../layouts/Layout.astro';
import { canonicalFor } from '../../lib/siteConfig';
const faqItems = [
  { q: 'How long is a session?', a: 'Typically 45–55 minutes depending on context and jurisdiction.' },
  { q: 'Do you offer telehealth?', a: 'Telehealth availability depends on licensure regions; details to follow.' },
  { q: 'Do you provide emergency support?', a: 'No. Clients in crisis should use emergency services or hotlines.' }
];
const faqStructured = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: faqItems.map(i => ({
    '@type': 'Question',
    name: i.q,
    acceptedAnswer: { '@type': 'Answer', text: i.a }
  })),
  url: canonicalFor(Astro.url.pathname)
};
---
<Layout title="FAQ" description="Frequently asked questions about therapy logistics and expectations.">
  <Fragment slot="head">
    <StructuredData data={faqStructured} />
  </Fragment>
  <h1>Frequently Asked Questions</h1>
  <p>Placeholder introduction. This section will later be auto-generated from markdown or structured data with JSON-LD.</p>
  <dl>
    <dt>How long is a session?</dt>
    <dd>Placeholder: Typically 45–55 minutes (jurisdiction dependent).</dd>
    <dt>Do you offer telehealth?</dt>
    <dd>Placeholder: Yes/No – details to be finalized.</dd>
    <dt>Do you provide emergency support?</dt>
    <dd>No. If you are in crisis, contact local emergency services or crisis hotlines (see Emergency page).</dd>
  </dl>
</Layout>
