---
import Layout from '../../layouts/Layout.astro';
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
Astro.response.headers.set('Location', base + '/schedule/');
---
<Layout title="Redirecting" noindex={true} canonical={base + '/schedule/'}>
  <meta http-equiv="refresh" content={`0; url='${base}/schedule/'`} />
  <p>If you are not redirected automatically, <a href={base + '/schedule/'}>go to the Schedule page</a>.</p>
  <script>window.location.replace(`${base}/schedule/`)</script>
</Layout>
