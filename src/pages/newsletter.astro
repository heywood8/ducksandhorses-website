---
import Layout from '../layouts/Layout.astro';
import { siteConfig } from '../lib/siteConfig.js';
const title = 'Newsletter';
const description = 'Sign up for updates (placeholder)';
---
<Layout title={title} description={description}>
  <h1>{title}</h1>
  <p>This is a placeholder for a future newsletter signup.</p>
  {siteConfig.features.newsletter ? (
    <form onsubmit="event.preventDefault(); alert('Newsletter signup not yet implemented.');">
      <label for="email">Email</label><br />
      <input id="email" name="email" type="email" required placeholder="you@example.com" />
      <button type="submit">Subscribe</button>
    </form>
  ) : (
    <p><em>Newsletter feature flag currently disabled.</em></p>
  )}
</Layout>
