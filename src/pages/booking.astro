---
import Layout from '../layouts/Layout.astro';
import { siteConfig } from '../lib/siteConfig.js';
const title = 'Booking';
const description = 'Book an appointment (placeholder)';
---
<Layout title={title} description={description}>
  <h1>{title}</h1>
  <p>This is a placeholder for future online booking integration.</p>
  <p>For now, please reach out via the <a href={import.meta.env.BASE_URL + 'contact/'}>contact form</a>.</p>
  {siteConfig.features.booking ? (
    <p>Booking feature flag is enabled. Implement booking logic here.</p>
  ) : (
    <p><em>Booking feature flag currently disabled.</em></p>
  )}
</Layout>
