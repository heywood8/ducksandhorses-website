---
import Meta from '../components/Meta.astro';
import { canonicalFor } from '../lib/siteConfig';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  canonical?: string;
  noindex?: boolean;
}
const { title = 'Psychologist | Home', description = 'Professional psychological services.', canonical, noindex = false } = Astro.props as Props;
const computedCanonical = canonical || canonicalFor(Astro.url.pathname);
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
  <Meta title={title} description={description} canonical={computedCanonical} noindex={noindex} />
  <slot name="head" />
  </head>
  <body>
    <a href="#main" class="skip-link">Skip to content</a>
    <header class="site-header" role="banner">
      <div class="container" style="display:flex;align-items:center;justify-content:space-between;gap:var(--space-6);flex-wrap:wrap;">
        <div class="logo" style="font-weight:600;font-size:var(--font-size-lg);"><a href="/" aria-label="Home">Ducks and horses</a></div>
        <nav aria-label="Main navigation">
          <ul class="nav">
            <li><a href="/" class={Astro.url.pathname === '/' ? 'active' : ''}>Home</a></li>
            <li><a href="/about" class={Astro.url.pathname.startsWith('/about') ? 'active' : ''}>About</a></li>
            <li><a href="/services" class={Astro.url.pathname.startsWith('/services') ? 'active' : ''}>Services</a></li>
            <li><a href="/conditions" class={Astro.url.pathname.startsWith('/conditions') ? 'active' : ''}>Conditions</a></li>
            <li><a href="/blog" class={Astro.url.pathname.startsWith('/blog') ? 'active' : ''}>Blog</a></li>
            <li><a href="/faq" class={Astro.url.pathname.startsWith('/faq') ? 'active' : ''}>FAQ</a></li>
            <li><a href="/contact" class={Astro.url.pathname.startsWith('/contact') ? 'active' : ''}>Contact</a></li>
          </ul>
        </nav>
      </div>
    </header>
    <main id="main" class="main">
      <div class="container">
        <slot />
      </div>
    </main>
    <footer class="site-footer">
      <div class="container">
        <p>&copy; {new Date().getFullYear()} Psychologist. Not for emergencies. If in crisis call local emergency services.</p>
        <p class="muted">This site does not provide emergency mental health services. <a href="/emergency">Emergency & Crisis Resources</a> Â· <a href="/privacy">Privacy & Terms</a></p>
      </div>
    </footer>
  </body>
</html>
