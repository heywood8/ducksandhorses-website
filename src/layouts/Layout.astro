---
import Analytics from '../components/Analytics.astro';
import Meta from '../components/Meta.astro';
import { canonicalFor } from '../lib/siteConfig';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  canonical?: string;
  noindex?: boolean;
}
const { title = 'Psychologist | Home', description = 'Professional psychological services.', canonical, noindex = false } = Astro.props as Props;
const computedCanonical = canonical || canonicalFor(Astro.url.pathname);
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
  <Meta title={title} description={description} canonical={computedCanonical} noindex={noindex} />
  <Analytics />
  <slot name="head" />
  </head>
  <body>
    <a href="#main" class="skip-link">Skip to content</a>
    <script>
      // Prefetch internal links on hover (performance hint). Skips if user prefers reduced data.
      (() => {
        try {
          const reduced = globalThis.matchMedia && globalThis.matchMedia('(prefers-reduced-data: reduce)').matches;
          if (reduced) return;
          const base = import.meta.env.BASE_URL.replace(/\/$/, '');
          const prefetch = (url) => {
            if (!url.startsWith(base + '/')) return;
            const link = document.createElement('link');
            link.rel = 'prefetch';
            link.href = url;
            document.head.appendChild(link);
          };
          document.addEventListener('mouseover', e => {
            const a = e.target.closest('a');
            if (!a || a.dataset.prefetched) return;
            const href = a.getAttribute('href');
            if (!href || href.startsWith('#') || href.startsWith('http')) return;
            a.dataset.prefetched = '1';
            prefetch(a.href);
          });
        } catch (e) {
          // fail silently
        }
      })();
    </script>
    <header class="site-header" role="banner" style="position:relative;">
      <div class="container" style="display:flex;align-items:center;justify-content:space-between;gap:var(--space-6);flex-wrap:wrap;">
  <div class="logo" style="display:flex;align-items:center;gap:var(--space-2);font-weight:600;font-size:var(--font-size-lg);">
    <a href={base + '/'} aria-label="Home" style="display:flex;align-items:center;gap:var(--space-2);text-decoration:none;color:inherit;">
      <img src="https://cdn4.telesco.pe/file/lhKH1rR6CKioFcjlwQUXSGrNnqJQiHO61OyZOYIICyvXymGBwADHYUGcJ31EnicWPitGOEChiOofjPM2x9OzvITtI9RiwD72CjvIK4KmJq8VVV6Bx7bfwLk3a_Cq3_WKW8yHAKd62HrLQOiDJeTSqheGvIrKrn9GhFRY-eToVq2quCP2GwtWUmlRLxZhX8tbxVtqbnJS4UsJ7lkbblQtaC_FqL_hYWiU0wDzv0RY26mmB0zYHJIUSrXKJZiqsDxtNU8aCubZBBBQTPAgmMDsibHhQLInJCWSVsIOFc3utTbKCpbaJIcJFaagXLtFDmGYY3PxshYid8Kzy3eCdMztwQ.jpg" alt="Therapeutic nature scene" width="40" height="40" style="border-radius:50%;object-fit:cover;display:block;" loading="lazy" decoding="async" />
      <span>Ducks and horses</span>
    </a>
  </div>
        <nav aria-label="Main navigation" style="display:flex;align-items:center;gap:var(--space-4);">
          <ul class="nav">
            <li><a href={base + '/'} class={Astro.url.pathname === base + '/' || Astro.url.pathname === '/' ? 'active' : ''}>About me</a></li>
            <li><a href={base + '/services'} class={Astro.url.pathname.startsWith(base + '/services') || Astro.url.pathname.startsWith('/services') ? 'active' : ''}>Services</a></li>
            <li><a href={base + '/conditions'} class={Astro.url.pathname.startsWith(base + '/conditions') || Astro.url.pathname.startsWith('/conditions') ? 'active' : ''}>Conditions</a></li>
            <li><a href={base + '/schedule'} class={Astro.url.pathname.startsWith(base + '/schedule') || Astro.url.pathname.startsWith('/schedule') ? 'active' : ''}>Schedule</a></li>
          </ul>
        </nav>
      </div>
      <button type="button" id="theme-toggle" aria-label="Toggle dark mode" class="theme-icon-btn" style="position:absolute;top:8px;right:8px;">
        <svg data-icon-sun xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><circle cx="12" cy="12" r="5"/><line x1="12" y1="1" x2="12" y2="3"/><line x1="12" y1="21" x2="12" y2="23"/><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/><line x1="1" y1="12" x2="3" y2="12"/><line x1="21" y1="12" x2="23" y2="12"/><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/></svg>
        <svg data-icon-moon xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true" style="display:none;"><path d="M21 12.79A9 9 0 0 1 11.21 3 7 7 0 0 0 12 21a9 9 0 0 1 9-8.21Z"/></svg>
      </button>
    </header>
    <main id="main" class="main">
      <div class="container">
        <slot />
      </div>
    </main>
    <footer class="site-footer">
      <div class="container">
        <p>&copy; {new Date().getFullYear()} Psychologist. Not for emergencies. If in crisis call local emergency services.</p>
        <p class="muted">This site does not provide emergency mental health services. <a href={base + '/emergency'}>Emergency & Crisis Resources</a> Â· <a href={base + '/privacy'}>Privacy & Terms</a></p>
      </div>
    </footer>
    <script is:inline>
      (function(){
        const root = document.documentElement;
        const pref = localStorage.getItem('theme');
        if (pref === 'dark' || pref === 'light') {
          root.setAttribute('data-theme', pref);
        }
        const btn = document.getElementById('theme-toggle');
        if (!btn) return;
        const sun = btn.querySelector('[data-icon-sun]');
        const moon = btn.querySelector('[data-icon-moon]');
        function current(){
          const attr = root.getAttribute('data-theme');
          if (attr) return attr;
          return matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
        }
        function render(){
          const mode = current();
          if (sun && moon) {
            if (mode === 'dark') {
              sun.style.display = 'none';
              moon.style.display = '';
              btn.setAttribute('aria-label', 'Switch to light mode');
            } else {
              sun.style.display = '';
              moon.style.display = 'none';
              btn.setAttribute('aria-label', 'Switch to dark mode');
            }
          }
        }
        btn.addEventListener('click', () => {
          const mode = current();
          const next = mode === 'dark' ? 'light' : 'dark';
          root.setAttribute('data-theme', next);
          localStorage.setItem('theme', next);
          render();
        });
        render();
      })();
    </script>
  </body>
</html>
