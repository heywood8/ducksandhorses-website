---
import { Image } from 'astro:assets';
import Analytics from '../components/Analytics.astro';
import Meta from '../components/Meta.astro';
import { canonicalFor } from '../lib/siteConfig';
import '../styles/global.css';
import headerImage from '../../public/images/ducksandhorses.jpg';

interface Props {
  description?: string;
  canonical?: string;
  noindex?: boolean;
  pageTitle?: string; // optional OG/social title distinct from fixed tab title
}
const { description = 'Professional psychological services.', canonical, noindex = false, pageTitle } = Astro.props as Props;
const pathname = Astro.url.pathname;
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const computedCanonical = canonical || canonicalFor(pathname);
---
<!DOCTYPE html>
<html lang="ru">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
  <Meta pageTitle={pageTitle} description={description} canonical={computedCanonical} noindex={noindex} />
  <Analytics />
  <slot name="head" />
  </head>
  <body>
    <a href="#main" class="skip-link">Skip to content</a>
    <script>
      // Prefetch internal links on hover (performance hint). Skips if user prefers reduced data.
      (() => {
        try {
          const reduced = globalThis.matchMedia && globalThis.matchMedia('(prefers-reduced-data: reduce)').matches;
          if (reduced) return;
          const base = import.meta.env.BASE_URL.replace(/\/$/, '');
          const prefetch = (url) => {
            if (!url.startsWith(base + '/')) return;
            const link = document.createElement('link');
            link.rel = 'prefetch';
            link.href = url;
            document.head.appendChild(link);
          };
          document.addEventListener('mouseover', e => {
            const a = e.target.closest('a');
            if (!a || a.dataset.prefetched) return;
            const href = a.getAttribute('href');
            if (!href || href.startsWith('#') || href.startsWith('http')) return;
            a.dataset.prefetched = '1';
            prefetch(a.href);
          });
        } catch (e) {
          // fail silently
        }
      })();
    </script>
    <header class="site-header" role="banner" style="position:relative;">
      <div class="container" style="display:flex;align-items:center;justify-content:space-between;gap:var(--space-6);flex-wrap:wrap;">
  <div class="logo" style="display:flex;align-items:center;gap:var(--space-2);font-weight:600;font-size:var(--font-size-lg);">
    <a href={base + '/'} aria-label="Home" style="display:flex;align-items:center;gap:var(--space-2);text-decoration:none;color:inherit;">
      <Image src={headerImage} alt="Therapeutic nature scene" width={40} height={40} style="border-radius:50%;object-fit:cover;display:block;" loading="lazy" decoding="async" />
      <span>Анна Лопатина | Психолог</span>
    </a>
  </div>
        <nav aria-label="Main navigation" style="display:flex;align-items:center;gap:var(--space-4);">
          <ul class="nav">
            <li><a href={base + '/'} class={pathname === base + '/' || pathname === '/' ? 'active' : ''} aria-current={(pathname === base + '/' || pathname === '/') ? 'page' : undefined}>Обо мне</a></li>
            <li><a href={base + '/services'} class={pathname.includes('/services') ? 'active' : ''} aria-current={pathname.includes('/services') ? 'page' : undefined}>Услуги</a></li>
            <li><a href={base + '/conditions'} class={pathname.includes('/conditions') ? 'active' : ''} aria-current={pathname.includes('/conditions') ? 'page' : undefined}>С чем работаю</a></li>
            <li><a href={base + '/schedule'} class={pathname.includes('/schedule') ? 'active' : ''} aria-current={pathname.includes('/schedule') ? 'page' : undefined}>Запись</a></li>
          </ul>
        </nav>
      </div>
      <button type="button" id="theme-toggle" aria-label="Toggle dark mode" class="theme-icon-btn" style="position:absolute;top:8px;right:8px;">
        <svg data-icon-sun xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><circle cx="12" cy="12" r="5"/><line x1="12" y1="1" x2="12" y2="3"/><line x1="12" y1="21" x2="12" y2="23"/><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/><line x1="1" y1="12" x2="3" y2="12"/><line x1="21" y1="12" x2="23" y2="12"/><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/></svg>
        <svg data-icon-moon xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true" style="display:none;"><path d="M21 12.79A9 9 0 0 1 11.21 3 7 7 0 0 0 12 21a9 9 0 0 1 9-8.21Z"/></svg>
      </button>
    </header>
    <main id="main" class="main">
      <div class="container">
        <slot />
      </div>
    </main>
    <footer class="site-footer">
      <div class="container">
  <p>&copy; {new Date().getFullYear()} Психолог.</p>
  <p class="muted">Сайт не предоставляет экстренную психиатрическую помощь. <a href={base + '/emergency'}>Экстренные ресурсы</a> · <a href={base + '/privacy'}>Конфиденциальность и условия</a></p>
      </div>
    </footer>
    <script is:inline>
      // Adjust footer positioning: if content shorter than viewport, remove extra scroll by letting footer sit within initial view.
      (function(){
        function evaluate(){
          try {
            const b = document.body;
            // A small threshold (2px) to account for sub-pixel rounding / scrollbar presence
            const fits = b.scrollHeight <= (window.innerHeight + 2);
            b.classList.toggle('no-scroll-footer', fits);
          } catch(_) {}
        }
        // Run after layout
        window.addEventListener('load', evaluate);
        // Re-evaluate on resize and orientation changes
        window.addEventListener('resize', evaluate);
        // Mutation observer catches late content (e.g., async widgets) without polling
        const mo = new MutationObserver((m) => evaluate());
        mo.observe(document.documentElement, { childList: true, subtree: true, characterData: true });
        // Initial synchronous attempt (in case DOM is already final)
        evaluate();
      })();
    </script>
    <script is:inline>
      (function(){
        const root = document.documentElement;
        // Mark that JS is enabled to allow CSS to enable transitions only post-hydration
        root.classList.add('js');
        const pref = localStorage.getItem('theme');
        if (pref === 'dark' || pref === 'light') {
          root.setAttribute('data-theme', pref);
        }
        const btn = document.getElementById('theme-toggle');
        if (!btn) return;
        const sun = btn.querySelector('[data-icon-sun]');
        const moon = btn.querySelector('[data-icon-moon]');
        const reducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
        let animTimer = null;
        function current(){
          const attr = root.getAttribute('data-theme');
          if (attr) return attr;
          return matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
        }
        function render(){
          const mode = current();
          if (sun && moon) {
            if (mode === 'dark') {
              sun.style.display = 'none';
              moon.style.display = '';
              btn.setAttribute('aria-label', 'Switch to light mode');
            } else {
              sun.style.display = '';
              moon.style.display = 'none';
              btn.setAttribute('aria-label', 'Switch to dark mode');
            }
          }
        }
        btn.addEventListener('click', () => {
          const mode = current();
          const next = mode === 'dark' ? 'light' : 'dark';
          // Add temporary class for smooth cross-fade if user does not prefer reduced motion
          if (!reducedMotion) {
            root.classList.add('theme-animating');
            if (animTimer) clearTimeout(animTimer);
          }
          root.setAttribute('data-theme', next);
          localStorage.setItem('theme', next);
          render();
          if (!reducedMotion) {
            // Remove class after transition ends (slightly longer than CSS duration)
            animTimer = setTimeout(() => root.classList.remove('theme-animating'), 300);
          }
        });
        render();
      })();
    </script>
  </body>
</html>
