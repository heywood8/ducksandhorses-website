---
interface Props {
  title?: string;
  description?: string;
}
const { title = 'Psychologist | Home', description = 'Professional psychological services.' } = Astro.props as Props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <a href="#main" class="skip-link">Skip to content</a>
    <header class="site-header">
      <nav aria-label="Main navigation">
        <ul class="nav">
          <li><a href="/">Home</a></li>
        </ul>
      </nav>
    </header>
    <main id="main" class="main">
      <slot />
    </main>
    <footer class="site-footer">
      <p>&copy; {new Date().getFullYear()} Psychologist. Not for emergencies. If in crisis call local emergency services.</p>
    </footer>
  </body>
</html>
<style global>
  :root {
    --color-bg: #ffffff;
    --color-fg: #0f172a;
    --color-primary: #0f766e;
    --color-accent: #7c7ba3;
    --space-1: 4px;
    --space-2: 8px;
    --space-3: 12px;
    --space-4: 16px;
    --space-5: 24px;
    --space-6: 32px;
    --radius-sm: 3px;
  }
  * { box-sizing: border-box; }
  body { font-family: system-ui,-apple-system,Segoe UI,Roboto,Inter,sans-serif; margin:0; background:var(--color-bg); color:var(--color-fg); line-height:1.55; }
  a { color: var(--color-primary); text-decoration:none; }
  a:hover, a:focus { text-decoration:underline; }
  .skip-link { position:absolute; left:-999px; top:auto; width:1px; height:1px; overflow:hidden; }
  .skip-link:focus { left:8px; top:8px; width:auto; height:auto; background:#fff; padding:var(--space-2) var(--space-3); border:2px solid var(--color-primary); z-index:1000; }
  .site-header { padding: var(--space-4); border-bottom:1px solid #e2e8f0; }
  .nav { list-style:none; display:flex; gap:var(--space-4); margin:0; padding:0; }
  .main { padding: var(--space-5) var(--space-4); max-width: 840px; margin: 0 auto; }
  .site-footer { padding: var(--space-5) var(--space-4); font-size:0.875rem; background:#f1f5f9; margin-top: var(--space-6); }
</style>
